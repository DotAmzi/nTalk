<% include ../header %>
<header>
  <h2>NTalk - Dados de um contato</h2>
</header>

<section>

  <form action="/contatos/<%- id %>?_method=delete" method="post">
    <p><label>Nome:</label><%- contato.nome %></p>
    <p><label>Email:</label><%- contato.email %></p>

    <p>
      <button type="submit">Excluir</button>
      <a href="/contatos/<%- id %>/editar">Editar</a>
    </p>
  </form>

</section>
